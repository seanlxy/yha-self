<div class="col-xs-12 col-md-3 col--compact">
  <form action="#" method="post" class="form footer__lower-form hidden-xs hidden-sm">
    <h2 class="form__heading footer__lower-form-heading text-blue ">Agent Login</h2>
    <fieldset class="form__fieldset">
      <div class="form__group">
        <input class="" name="email-address" id="email-address" placeholder="Email" type="email" autocomplete="off">
      </div>
      <div class="form__group">
        <input class="" name="password" id="password" placeholder="Password" type="password" autocomplete="off">
      </div>
      <div class="form__group">
        <button type="submit" name="login" value="1" class="link link--blue pull-right">Login</button>
        <label>
          <input type="checkbox" name="remember-me" value="1"> Remember Me 
        </label>
        <div class="clear"></div>
      </div>
      <div class="form__group">
        <a href="#" class="link-default"><u>Forgot Password?</u></a>
      </div>
    </fieldset>
  </form>
</div>